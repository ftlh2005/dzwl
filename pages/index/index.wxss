.swiper{
  box-sizing: border-box;
  position: relative;
  height:400rpx;

}
.banner-img{
  width:100%;
  height:480rpx;
}
.container{
  width: 100%;
  box-sizing: border-box;
  background-color: #F6F6F6;
  padding: 0 0 15rpx 0;
}
.btn2{
  background-color: #FFF;
  width: 50%;
  height: 180rpx;
  position: relative;
  float: left;
}
.card{
  width: 300rpx;
  height: 120rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 7rpx 15rpx 1rpx #CCC;
  position: absolute;
  margin:auto;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.card>text{
  margin-left: 30rpx;
  font-size: 28rpx;
}

.product{
  position: relative;
  background-color: #FFF;
  width: 100%;
  margin-top: 20rpx;
  float: left;
}
.title{
  width: 100%;
  height: 80rpx;
  background-color: #FFF;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
  border-bottom:1rpx solid #F6F6F6;
}
.title>.icon{
  width: 6rpx;
	height: 28rpx;
	background-color: #004990;
	border-radius: 3rpx;
  margin-left: 30rpx;
}
.title>text{
  color: #004990;
  font-size: 28rpx;
  margin-left: 20rpx;
}
.item-box{
  padding: 30rpx 30rpx 0 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}
.item{
  width: 224rpx;
  text-align: center;
  margin-bottom:30rpx;
}
.item>text{
  font-size: 22rpx;
}
.item-img{
  width: 220rpx;
  height: 180rpx;
  position: relative;
  border:1rpx solid #EBEBEB;
}
.item-img>image{
  max-width:150rpx; 
  position: absolute;
  margin: auto;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}