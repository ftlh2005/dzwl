.container{
  width: 100%;
  padding-bottom: 20rpx;
  background-color: #F6F6F6;
  box-sizing: border-box;
}
.personnal-info{
  box-sizing: border-box;
  margin-top: 1rpx;
  width: 100%;
  height: 180rpx;
  background-color: #FFF;
  padding: 30rpx;
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.photo{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.info-text{
  min-width: 100rpx;
  height: 90rpx;
  color: #333333;
  display: flex;
  justify-content: center;
  align-items: center;
  /* flex-direction: column; */
  align-content:flex-start;
  margin-left: 30rpx;
	position: relative;
}
.name{
  font-size: 26rpx;
  margin-bottom: 17rpx;
}
.identity{
  height: 40rpx;
  line-height: 36rpx;
  font-size: 22rpx;
  box-sizing: border-box;
  padding: 0 8rpx;
  border: 1rpx solid #FFF;
  color:#FFF;
	background: #E10E0E;
  text-align: center;
  border-radius: 10rpx;
	margin-top: -11rpx;
	margin-left: 20rpx;
}
.phone-num{
	width: 300rpx;
	font-size: 24rpx;
	color: #A9A8A8;
	display: block;
	position: absolute;
	left:1rpx;
	bottom:0;
}
.icon-right{
  position: absolute;
  right: 30rpx;
  width: 13rpx;
	height: 24rpx;
}
.funtion-box{
  width: 100%;
  margin-top: 18rpx;
}
.funtion-item{
  margin-top:2rpx;
  background-color: #FFF;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.item-text{
  font-size: 26rpx;
}
